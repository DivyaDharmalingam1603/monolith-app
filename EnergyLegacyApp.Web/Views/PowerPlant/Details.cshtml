@model EnergyLegacyApp.Data.Models.PowerPlant

@{
    ViewData["Title"] = "Power Plant Details";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-5 text-primary">
            <i class="fas fa-info-circle me-3"></i>@Model.Name
        </h1>
        <p class="lead">@Model.Type Power Plant - @Model.Location</p>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group" role="group">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<!-- Status Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Capacity
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Model.Capacity.ToString("N0") MW
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-bolt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Current Output
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Model.CurrentOutput.ToString("N1") MW
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tachometer-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Efficiency
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                    @((Model.EfficiencyRating * 100).ToString("N1"))%
                                </div>
                            </div>
                            <div class="col">
                                <div class="progress progress-sm mr-2">
                                    <div class="progress-bar bg-info" role="progressbar"
                                         style="width: @((Model.EfficiencyRating * 100).ToString("N0"))%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-percentage fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Utilization
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @((Model.CurrentOutput / Model.Capacity * 100).ToString("N1"))%
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chart-pie fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Plant Information -->
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle me-2"></i>Plant Information
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong><i class="fas fa-hashtag me-2"></i>Plant ID:</strong></td>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <td><strong><i class="fas fa-building me-2"></i>Name:</strong></td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong><i class="fas fa-cog me-2"></i>Type:</strong></td>
                                <td>
                                    <span class="badge bg-primary">@Model.Type</span>
                                </td>
                            </tr>
                            <tr>
                                <td><strong><i class="fas fa-map-marker-alt me-2"></i>Location:</strong></td>
                                <td>@Model.Location</td>
                            </tr>
                            <tr>
                                <td><strong><i class="fas fa-info-circle me-2"></i>Status:</strong></td>
                                <td>
                                    <span class="badge bg-@GetStatusColor(Model.Status)">
                                        @Model.Status
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong><i class="fas fa-building me-2"></i>Operator:</strong></td>
                                <td>@(Model.OperatorCompany ?? "N/A")</td>
                            </tr>
                            <tr>
                                <td><strong><i class="fas fa-calendar me-2"></i>Commission Date:</strong></td>
                                <td>@(Model.CommissionDate != DateTime.MinValue ? Model.CommissionDate.ToString("MMM dd, yyyy") : "N/A")</td>
                            </tr>
                            <tr>
                                <td><strong><i class="fas fa-wrench me-2"></i>Last Maintenance:</strong></td>
                                <td>@(Model.LastMaintenanceDate != DateTime.MinValue ? Model.LastMaintenanceDate.ToString("MMM dd, yyyy") : "N/A")</td>
                            </tr>
                            <tr>
                                <td><strong><i class="fas fa-dollar-sign me-2"></i>Maintenance Cost:</strong></td>
                                <td>@(Model.MaintenanceCost > 0 ? Model.MaintenanceCost.ToString("C") : "N/A")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-area me-2"></i>Performance Overview
                </h6>
            </div>
            <div class="card-body">
                <canvas id="performanceChart" width="100%" height="40"></canvas>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Status Card -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-clipboard-list me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Edit Plant
                    </a>
                    <button class="btn btn-info" onclick="generateReport()">
                        <i class="fas fa-file-alt me-2"></i>Generate Report
                    </button>
                    <button class="btn btn-success" onclick="exportData()">
                        <i class="fas fa-download me-2"></i>Export Data
                    </button>
                    <a href="@Url.Action("Delete", new { id = Model.Id })" 
                       class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this power plant?')">
                        <i class="fas fa-trash me-2"></i>Delete Plant
                    </a>
                </div>
            </div>
        </div>

        <!-- Report Card -->
        @if (ViewBag.Report != null)
        {
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-chart-line me-2"></i>Performance Report
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        @Html.Raw(ViewBag.Report)
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Performance Chart
        const ctx = document.getElementById('performanceChart').getContext('2d');
        const performanceChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Output (MW)',
                    data: [@((double)Model.CurrentOutput), @((double)(Model.CurrentOutput * 0.9m)), @((double)(Model.CurrentOutput * 1.1m)), @((double)(Model.CurrentOutput * 0.95m)), @((double)(Model.CurrentOutput * 1.05m)), @((double)Model.CurrentOutput)],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: @((double)Model.Capacity)
                    }
                }
            }
        });

        function generateReport() {
            alert('Report generation feature would be implemented here.');
        }

        function exportData() {
            alert('Data export feature would be implemented here.');
        }
    </script>
}

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Active" => "success",
            "Maintenance" => "warning",
            "Decommissioned" => "danger",
            _ => "secondary"
        };
    }
}