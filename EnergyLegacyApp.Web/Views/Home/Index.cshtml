@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1 text-gray-800">Dashboard</h1>
        <p class="text-muted mb-0">Real-time monitoring and analytics</p>
    </div>
    <div>
        <button class="btn btn-primary btn-sm" onclick="refreshDashboard()">
            <i class="fas fa-sync-alt me-1"></i>Refresh
        </button>
    </div>
</div>

<!-- Key Metrics Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Capacity</div>
                        <div class="h4 mb-0 fw-bold">@(ViewBag.TotalCapacity ?? 0) MW</div>
                    </div>
                    <div class="ms-3">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-bolt text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Active Plants</div>
                        <div class="h4 mb-0 fw-bold">@(ViewBag.ActivePlants ?? 0) / @(ViewBag.TotalPlants ?? 0)</div>
                    </div>
                    <div class="ms-3">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-industry text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">Monthly Consumption</div>
                        <div class="h4 mb-0 fw-bold">@(Math.Round((double)(ViewBag.MonthlyConsumption ?? 0), 2)) MWh</div>
                    </div>
                    <div class="ms-3">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-chart-line text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">CO2 Emissions</div>
                        <div class="h4 mb-0 fw-bold">@(Math.Round((double)(ViewBag.MonthlyEmissions ?? 0), 2)) tons</div>
                    </div>
                    <div class="ms-3">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-smog text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Alerts Row -->
<div class="row g-4 mb-4">
    <div class="col-xl-8">
        <div class="card h-100">
            <div class="card-header bg-transparent border-0 pb-0">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2 text-primary"></i>Power Plants by Type
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container" style="position: relative; height: 300px;">
                    <canvas id="plantTypeChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4">
        <div class="card h-100">
            <div class="card-header bg-transparent border-0 pb-0">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Maintenance Alerts
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.MaintenanceAlerts != null)
                {
                    var alerts = ViewBag.MaintenanceAlerts as List<EnergyLegacyApp.Data.Models.MaintenanceAlert>;
                    if (alerts != null && alerts.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var alert in alerts.Take(5))
                            {
                                <div class="list-group-item border-0 px-0 py-2">
                                    <div class="d-flex align-items-center">
                                        <div class="badge bg-@(alert.Priority == "High" ? "danger" : "warning") me-2">@alert.Priority</div>
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold">@alert.PlantName</div>
                                            <small class="text-muted">@alert.DaysOverdue days overdue</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (alerts.Count > 5)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">... and @(alerts.Count - 5) more alerts</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle text-success fs-1 mb-3"></i>
                            <p class="text-muted mb-0">All plants are up to date!</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card">
    <div class="card-header bg-transparent border-0 pb-0">
        <h5 class="card-title mb-0">
            <i class="fas fa-rocket me-2 text-primary"></i>Quick Actions
        </h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <a href="@Url.Action("Index", "PowerPlant")" class="btn btn-outline-primary w-100 py-3">
                    <i class="fas fa-industry d-block fs-4 mb-2"></i>
                    <span class="fw-semibold">Manage Plants</span>
                </a>
            </div>
            <div class="col-md-3">
                <a href="@Url.Action("Create", "PowerPlant")" class="btn btn-outline-success w-100 py-3">
                    <i class="fas fa-plus-circle d-block fs-4 mb-2"></i>
                    <span class="fw-semibold">Add New Plant</span>
                </a>
            </div>
            <div class="col-md-3">
                <a href="@Url.Action("ExportCsv", "PowerPlant")" class="btn btn-outline-info w-100 py-3">
                    <i class="fas fa-download d-block fs-4 mb-2"></i>
                    <span class="fw-semibold">Export Data</span>
                </a>
            </div>
            <div class="col-md-3">
                <button class="btn btn-outline-secondary w-100 py-3" onclick="refreshDashboard()">
                    <i class="fas fa-sync-alt d-block fs-4 mb-2"></i>
                    <span class="fw-semibold">Refresh</span>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ANTI-PATTERN: Inline JavaScript mixed with server-side data
        document.addEventListener('DOMContentLoaded', function() {
            var plantsByType = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.PlantsByType ?? new Dictionary<string, int>()));
            
            var ctx = document.getElementById('plantTypeChart').getContext('2d');
            var chart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(plantsByType),
                    datasets: [{
                        data: Object.values(plantsByType),
                        backgroundColor: [
                            '#FF6384',
                            '#36A2EB',
                            '#FFCE56',
                            '#4BC0C0',
                            '#9966FF',
                            '#FF9F40'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        });
        
        // ANTI-PATTERN: Global function for refresh
        function refreshDashboard() {
            location.reload();
        }
    </script>
}

<style>
    .text-xs {
        font-size: 0.75rem;
        letter-spacing: 0.05em;
    }
    .chart-container canvas {
        max-height: 300px;
    }
    .btn-outline-primary:hover,
    .btn-outline-success:hover,
    .btn-outline-info:hover,
    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        transition: all 0.2s;
    }
</style>
